@model Hotel_DAL.Models.Booking
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Cancel Reservation";
}

<h1>Cancel Reservation</h1>

<h3>Are you sure you want to cancel this reservation?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
    </dl>
    <form asp-action="CancelReservation" method="post">
        <input type="hidden" asp-for="Room.Id" />
        <input type="submit" value="Cancel" class="btn btn-danger" /> | <a asp-action="ViewBookedRooms">Back to List</a>
    </form>
</div>
